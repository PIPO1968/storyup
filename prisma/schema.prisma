generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     Int      @id @default(autoincrement())
  nombre                 String
  nick                   String   @unique
  centro                 String
  curso                  String
  tipo                   String   // "usuario" o "docente"
  email                  String   @unique
  password               String
  linkPerfil             String
  fechaInscripcion       DateTime @default(now())
  textoFechaInscripcion  String
  likes                  Int      @default(0)
  amigos                 String[] // Array de nicks de amigos
  historias              String[] // Array de IDs de historias
  comentarios            String[] // Array de IDs de comentarios
  premium                Boolean  @default(false)
  estadisticas           Json?    // Puntos por asignatura, etc.
  campeonatos            Json?    // Datos de campeonatos
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model Campeonato {
  id          Int      @id @default(autoincrement())
  temporada   Int
  tipo        String   // 'individual', 'centro', 'docentes'
  datos       Json     // Tabla de posiciones
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Act {
  id          Int      @id @default(autoincrement())
  email       String
  tipo        String
  descripcion String
  fecha       DateTime @default(now())
}
